{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title' | trans }}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{ 'login.hello' | trans }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{{ 'login.singin' | trans }}</h1>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group">
            <label for="inputUsername">{{ 'login.username' | trans }}</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
        </div>

        <div class="form-group">
            <label for="inputPassword">{{ 'login.password' | trans }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary" type="submit">{{ 'login.submit' | trans }}</button>
        </div>
    </form>
{% endblock %}
